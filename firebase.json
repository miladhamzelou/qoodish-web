{
  "hosting": {
    "public": "functions/hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "*.hot-update.*"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "host"
      }
    ],
    "headers": [
      {
        "source": "**/*.*.@(js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
